{
    "definitions": {
        "sitc": {
            "description": "A Standard Industrial Trade Classification code",
            "type": "object",
            "required": ["nomenclature", "code"],
            "properties": {
                "nomenclature": {
                    "type": "string",
                    "pattern": "^SITC$"
                },
                "version": {
                    "type": "string",
                    "enum": ["Rev 3", "Rev 4"]
                },
                "code": {
                    "type": "string",
                    "pattern": "^[0-9]{1,5}$"
                }
            }
        },
        "harmonized": {
            "description": "A Harmonized System code",
            "type": "object",
            "required": ["nomenclature", "code"],
            "properties": {
                "nomenclature": {
                    "type": "string",
                    "pattern": "^HS$"
                },
                "version": {
                    "type": "string",
                    "enum": ["1996", "2002", "2007", "2012", "2017"]
                },
                "code": {
                    "type": "string",
                    "pattern": "^[0-9]{2}$|^[0-9]{4}$|^[0-9]{4}\\.?[0-9]{2}$"
                }
            }
        },
        "combinedNomenclature": {
            "description": "A Combined Nomenclature code",
            "type": "object",
            "required": ["nomenclature", "code"],
            "properties": {
                "nomenclature": {
                    "type": "string",
                    "pattern": "^CN$"
                },
                "version": {
                    "type": "string",
                    "enum": ["1996", "2002", "2007", "2012", "2017"]
                },
                "code": {
                    "type": "string",
                    "pattern": "^[0-9]{2}$|[0-9]{4}$|[0-9]{6}$"
                }
            }
        },
        "centralProduct": {
            "description": "A Central Product Classification code",
            "type": "object",
            "required": ["nomenclature", "code"],
            "properties": {
                "nomenclature": {
                    "type": "string",
                    "pattern": "^CPC$"
                },
                "version": {
                    "type": "string",
                    "enum": ["v2.1", "v2"]
                },
                "code": {
                    "type": "string",
                    "pattern": "^[0-9]{3,5}$"
                }
            }
        }
    }
}