{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Facility",
    "description": "",
    "type": "object",
    "additionalProperties": false,
    "allOf": [{
        "$ref": "observable.schema.json"
    }, {
        "properties": {
            "capabilities": {
                "description": "A list of the facility's capabilities to transform inputs into outputs",
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "inputs": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/input-output"
                            }
                        },
                        "outputs": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/input-output"
                            }
                        }
                    }
                }
            },
            "throughputs": {
                "description": "A list of the rates at which the facility can process various items",
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "unit": {
                            "type": "object",
                            "oneOf": [{
                                    "properties": {
                                        "name": {
                                            "type": "string"
                                        }
                                    }
                                },
                                {
                                    "properties": {
                                        "item": {
                                            "type": "string"
                                        },
                                        "period": {
                                            "type": "string",
                                            "enum": ["Î¼s", "ms", "s", "min", "day", "week", "month", "quarter", "year", "decade"]
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        }
    }],
    "definitions": {
        "input-output": {
            "title": "Input-Output",
            "description": "An input or output of a facility process",
            "type": "object",
            "properties": {
                "material": {
                    "oneOf": [{
                        "$ref": "nomenclatures.schema.json#/definitions/harmonized"
                    }, {
                        "$ref": "nomenclatures.schema.json#/definitions/combinedNomenclature"
                    }]
                }
            }
        }
    }
}